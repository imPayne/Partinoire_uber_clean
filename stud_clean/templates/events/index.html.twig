{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}

    {% block navbar %}
        {{ include('_navbar.html.twig') }}
    {% endblock navbar %}

    {% if services %}
        <div class="mt-10 p-4 sm:p-6 md:p-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {% for service in services %}
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <img class="w-full h-48 object-cover" src="{{ asset('uploads/' ~ service.icon) }}" alt="{{ service.name }}">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-900">{{ service.name }}</h3>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}
