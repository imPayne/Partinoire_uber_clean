{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    {% block navbar %}
        {{ include('_navbar.html.twig') }}
    {% endblock navbar %}

    <div class="mt-8 sm:mt-12 md:mt-16 lg:mt-20 xl:mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 xl:mb-24 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mt-10 md:mt-0 md:col-span-2">
            <form method="POST" action="{{ path('contact') }}">
                <div class="shadow overflow-hidden sm:rounded-md">
                    <div class="px-4 py-5 bg-white sm:p-6">
                        <div class="grid grid-cols-6 gap-6">
                            <div class="col-span-6 sm:col-span-3">
                                <label for="nom" class="block text-sm font-medium text-gray-700">
                                    Nom
                                </label>
                                <input type="text" name="nom" id="nom" value="{{ nom }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                            </div>

                            <div class="col-span-6 sm:col-span-3">
                                <label for="email" class="block text-sm font-medium text-gray-700">
                                    Adresse e-mail
                                </label>
                                <input type="email" name="email" id="email" value="{{ email }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                            </div>

                            <div class="col-span-6">
                                <label for="message" class="block text-sm font-medium text-gray-700">
                                    Message
                                </label>
                                <textarea name="message" id="message" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">{{ message }}</textarea>
                            </div>
                        </div>

                        {% if errors is not empty %}
                            <div class="mt-4 text-red-500">
                                <ul>
                                    {% for error in errors %}
                                        <li>{{ error }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        {% if success %}
                            <div class="mt-4 text-green-500">
                                Votre message a bien été envoyé.
                            </div>
                        {% endif %}
                    </div>
                    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Envoyer
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
