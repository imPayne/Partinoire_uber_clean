{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {% block navbar %}
        {{ include('_navbar.html.twig') }}
    {% endblock navbar %}


    <div class="mt-20 flex items-center justify-center">
        <div class="p-6 w-96 flex flex-col items-center justify-center bg-gray-100 rounded-lg">
            <h1 class="font-semibold">Register</h1>

            {{ form_start(registrationForm) }}
                <div class="my-6 px-4">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'focus:border-red-500 focus:ring focus:ring-red-500 focus:ring-opacity-100 rounded-md shadow-sm'}, 'label_attr': {'class': 'block font-medium text-gray-700 my-class'}}) }}
                </div>
                <div class="my-6 px-4" >
                    {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}</div>
                <div class="my-6 px-4" >
                    {{ form_row(registrationForm.agreeTerms,

                    ) }}</div>

                <button type="submit" class="font-semibold p-2 bg-blue-500 rounded-md">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
