{% extends 'base.html.twig' %}

    {% block title %}Ménages Party{% endblock %}

    {% block body %}
        {% block navbar %}
            {{ include('_navbar.html.twig') }}
        {% endblock navbar %}

        <div class="flex items-center justify-center">
            {% if houseworks is not empty %}
                <div class="mt-10 p-6 grid grid-cols-4">
                    {% for housework in houseworks %}
                        <div class="flex flex-col p-6 m-4 h-auto w-auto items-center bg-gray-200 rounded-md">
                                {% if housework.listImage is defined %}
                                    <img class="rounded-md mb-6 h-48 w-auto object-cover" src="{{ asset('uploads/' ~ housework.listImage) }}" alt="image">
                                {% endif %}

                                <h1 class="text-xl font-bold mb-4">Titre: {{ housework.title }}</h1>
                                <p class="text-lg mb-4 px-2">{{ housework.description }}</p>
                                <p class="text-lg mb-4">
                                    <time datetime="{{ housework.dateStart|date('Y-m-d h:i') }}">
                                        {{ housework.dateStart|date('l jS F g:i') }}
                                    </time>
                                </p>

                            <div class="flex justify-center items-center">
                                {% for participant in housework.participant %}
                                    <p class="text-lg mb-4 px-2">
                                        {{ participant.service.name }}
                                    </p>
                                {% endfor %}
                            </div>
                            <p class="text-lg mb-4 px-2">
                                {{ housework.customer.firstName }} {{ housework.customer.lastName|capitalize }}
                            </p>
                        </div>
                    {% endfor %}

                </div>
            {% else %}
                    <div class="p-6 m-4 mt-32 flex h-96 w-full items-center justify-center">
                        <h1 class="text-2xl mb-4 px-2">Aucune Ménages Party à affiché pour L'instant...☹</h1>
                    </div>
            {% endif %}
        </div>
    {% endblock %}


