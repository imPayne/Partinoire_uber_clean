{% extends 'base.html.twig' %}

{% block title %}Mes Ménages Party{% endblock %}

{% block body %}
    {% block navbar %}
        {{ include('_navbar.html.twig') }}
    {% endblock navbar %}
    <div class="flex items-center justify-center">
        <div class="mt-10 p-6 grid grid-cols-2">
            {% if app.user.houseworks %}
                {% for housework in app.user.houseworks %}
                    <div class="flex flex-col p-6 m-4 h-auto w-auto items-center justify-center $bg-gray-200 rounded-md">
                        {% if housework.listImage is defined %}
                            <img class="rounded-md mb-6 h-56 h-56 object-cover" src="{{ asset('uploads/' ~ housework.listImage) }}" alt="image">
                        {% endif %}
                        <h1 class="text-xl font-bold mb-4">{{ housework.title }}</h1>
                        <p class="text-lg mb-4 px-2">Description: {{ housework.description }}</p>
                        <p class="text-lg mb-4">
                            <time datetime="{{ housework.dateStart|date('Y-m-d h:i') }}">
                                {{ housework.dateStart|date('l jS F g:i') }}
                            </time>
                        </p>
                        <p class="text-lg mb-4">Adresse: {{ app.user.adresse }}</p>
                        <p class="text-lg mb-4">Code Postal: {{ app.user.codePostal }}</p>
                        <p class="text-lg mb-4">Région: {{ app.user.region }}</p>
                    </div>
                {% endfor %}
            {% else %}
                <div class="flex flex-col p-6 m-4 h-auto w-auto items-center justify-center $bg-gray-200 rounded-md">
                    <h1 class="text-xl font-bold mb-4 text-red-400">Vous n'avez pas de Ménage Party en cours.</h1>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
