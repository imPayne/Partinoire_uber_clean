{% block navbar %}
    <section>
        <div class="h-20 w-full flex items-center justify-between bg-gray-100">
            <a href="/">
                <img class="ml-10 h-20 p-4" src="{{ asset('images/logo_uber_clean.png')}}" alt="logo">
            </a>
            <ul class="w-262 h-50 flex items-center mr-20">
                <li class="text-lg font-bold mr-4">
                    <a href="/contact">Contact</a>
                </li>
                <li class="text-lg font-bold mr-4">
                    <a href="{{ path('app_events') }}">Services</a>
                </li>
                {% if app.user %}
                    <li class="text-lg font-bold ml-10 mr-6">
                        <a href="/logout">DÃ©connexion</a>
                    </li>
                    {% if app.user %}
                        <li class="mr-6 h-12 w-12 rounded-full overflow-hidden">
                            <a href="{{ path('app_profile', {'id': app.user.id}) }}">
                                {% if app.user.image %}
                                    <img class="rounded-md mb-6 h-full w-full object-cover" src="{{ asset('uploads/' ~ app.user.image) }}" alt="{{ app.user.firstName }}">
                                {% else %}
                                    <img class="rounded-md mb-6 h-full w-full object-cover" src="{{ asset('images/default.jpg') }}" alt="{{ app.user.firstName }}">
                                {% endif %}
                            </a>
                        </li>
                    {% endif %}
                    <li class="text-lg font-bold mr-4">
                        <a href="{{ path('app_profile', {'id': app.user.id}) }}">{{ app.user.firstName|capitalize }}</a>
                    </li>
                {% else %}
                    <li class="text-lg font-bold mr-4"><a href="{{  path('app_login') }}">Connexion</a></li>
                    <li class="text-lg font-bold mr-4"><a href="{{  path('app_register') }}">S'inscrire</a></li>
                {% endif %}
            </ul>
        </div>
    </section>

{% endblock navbar %}