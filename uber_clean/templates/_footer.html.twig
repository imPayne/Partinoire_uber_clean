{% block footer %}
    <footer class="h-auto w-full flex flex-col justify-center bg-gray-200">
        <div class="h-36 w-36 ml-28 mt-20">
            <a href="/">
                <img class="h-36 w-36" src="{{ asset('images/logo_uber_clean.png')}}" alt="logo">
            </a>
        </div>
        <div class="flex flex-col items-center">
            <ul class="w-262 h-auto flex flex-col items-center">
                <li class="text-lg font-bold mb-10">
                    <h1 class="text-4xl font-bold mr-6">Uber Clean</h1>
                </li>
                <li class="flex items-center text-lg font-bold mb-10">
                    {% if is_granted("ROLE_CUSTOMER") %}
                        <a class="mx-4" href="{{ path('app_show_houseworks') }}">Mes Ménages Party</a>
                    {% endif %}
                    <a class="mx-4" href="{{ path('app_menage_party') }}">Ménages Party</a>
                    <a class="mx-4" href="{{ path('app_events') }}">Les Services</a>

                </li>
                <li class="text-lg font-bold">
                    <a href="{{ path('contact') }}">Contactez-nous</a>
                </li>
            </ul>
            <p class="mt-4 mb-2 text-lg font-bold">© {{ "now"|date("Y") }} Uber Clean</p>
        </div>
    </footer>
{% endblock %}
