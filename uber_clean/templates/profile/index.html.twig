{% extends 'base.html.twig' %}

{% block title %}Uber Clean{% endblock %}

{% block body %}
    {% block navbar %}
        {{ include('_navbar.html.twig') }}
    {% endblock navbar %}


    <div class="mt-10 p-6 grid grid-cols-2 gap-4">
        <div class="flex flex-col w-auto m-10 p-10 items-start justify-center bg-gray-100 rounded-lg">
            {% if app.user.image %}
                <img class="rounded-md mb-6 h-full w-full object-cover" src="{{ asset('uploads/' ~ app.user.image) }}" alt="{{ app.user.firstName }}">
            {% else %}
                <img class="rounded-md mb-6 h-full w-full object-cover" src="{{ asset('images/default.jpg') }}" alt="{{ app.user.firstName }}">
            {% endif %}
            <h2 class="text-xl font-bold mb-4">Profile de {{ app.user.firstName }} {{ app.user.lastName|capitalize }}</h2>
            <p class="text-lg mb-4">Email: {{ app.user.userIdentifier }}</p>
            {% if not isCleaner %}
                <p class="text-lg mb-2">Adresse: {{ userType.adresse }}</p>
                <p class="text-lg mb-2">Région: {{ userType.region }}</p>
                <p class="text-lg mb-2">Code Postal: {{ userType.codePostal }}</p>
            {% else %}
                <p class="text-lg mb-2">Services: {{ userType.services }}</p>
            {% endif %}
            <a class="mb-4 mt-10 text-center bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded  focus:shadow-outline-indigo block mx-auto" href="/profile/edit">Modifier votre profile</a>
        </div>
        <div class="flex flex-col w-96 m-10 p-10 items-center justify-center bg-gray-100 rounded-lg">
            {# ajouter la liste des Match party du user connecté #}
            <img class="rounded-md mb-6 h-full w-auto object-cover" src="{{ asset('images/empty.jpg') }}" alt="empty-service-image">
            <a class="mb-4 bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded  focus:shadow-outline-indigo" href="/housework">Créer votre Ménage Party</a>
        </div>
    </div>
    {% if 'ROLE_CUSTOMER' in app.user.roles %}

    {% endif %}

{% endblock %}
