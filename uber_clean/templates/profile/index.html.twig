{% extends 'base.html.twig' %}

{% block title %}{{ app.user.firstName }} {{ app.user.lastName|capitalize }}{% endblock %}

{% block body %}
    {% block navbar %}
        {{ include('_navbar.html.twig') }}
    {% endblock navbar %}

<div class="flex flex-col justify-center items-center">
    <div class="flex flex-col w-96 m-10 p-10 items-start justify-center bg-gray-100 rounded-lg">
        {% if app.user.image %}
            <img class="rounded-md mb-6 h-full w-full object-cover" src="{{ asset('uploads/' ~ app.user.image) }}" alt="{{ app.user.firstName }}">
        {% else %}
            <img class="rounded-md mb-6 h-full w-full object-cover" src="{{ asset('images/default.jpg') }}" alt="{{ app.user.firstName }}">
        {% endif %}
        <h2 class="text-xl font-bold mb-4">Profile de {{ app.user.firstName }} {{ app.user.lastName|capitalize }}</h2>
        <p class="text-lg mb-4">Email: {{ app.user.userIdentifier }}</p>
        {% if not isCleaner %}
            <div class="flex flex-row">
                <p class="text-lg mb-2">Adresse: </p>
                <p class="text-lg mb-2">{{ userType.adresse }}</p>
            </div>
            <p class="text-lg mb-2">Région: {{ userType.region }}</p>
            <p class="text-lg mb-2">Code Postal: {{ userType.codePostal }}</p>
        {% else %}
            <p class="text-lg mb-2">Services: {{ userType.services }}</p>
        {% endif %}
    </div>

    <a class="mb-4 bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-indigo" href="/profile/edit">Modifier votre profile</a>
    {% if app.user.roles == ['ROLE_CUSTOMER'] %}
        <a class="mb-4 bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-indigo" href="/housework">Créer votre Ménage Party</a>
    {% endif %}


</div>
{% endblock %}
