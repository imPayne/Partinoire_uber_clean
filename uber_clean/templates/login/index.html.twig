{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% block navbar %}
        {{ include('_navbar.html.twig') }}
    {% endblock navbar %}
    <div class="flex justify-center items-center">
        <div class="flex flex-col w-96 m-10 p-10 items-center justify-center bg-gray-100 rounded-lg">
            <h1 class="text-2xl font-bold mb-4">Connection</h1>

            {{ form_start(form, {'attr': {'class': 'w-full max-w-md'}}) }}
            {{ form_row(form.email, {'attr': {'class': 'mb-4 w-full px-3 py-2 rounded-lg border-gray-300 focus:border-indigo-500 focus:outline-none focus:shadow-outline-blue'}}) }}
            {{ form_row(form.password, {'attr': {'class': 'mb-4 w-full px-3 py-2 rounded-lg border-gray-300 focus:border-indigo-500 focus:outline-none focus:shadow-outline-blue'}, 'label': 'Password'}) }}

            <div class="flex items-center justify-center flex-col">
                <button type="submit" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-indigo">Se connecter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
